 <beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:osgi="http://www.springframework.org/schema/osgi"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
  http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/osgi
  http://www.springframework.org/schema/osgi/spring-osgi.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="interactivespaces.controller.repository.controller"
		class="interactivespaces.controller.repository.internal.file.FileLocalSpaceControllerRepository"
		init-method="startup" destroy-method="shutdown">
        <property name="activityStorageManager" ref="interactivespaces.controller.manager.activity.storage" />
        <property name="spaceEnvironment" ref="interactivespaces.environment" />
   	</bean>

	<bean id="interactivespaces.controller.manager.configuration"
		class="interactivespaces.controller.activity.configuration.PropertyFileActivityConfigurationManager">
		<property name="expressionEvaluatorFactory" ref="interactivespaces.expression.evaluator.factory" />
		<property name="spaceEnvironment" ref="interactivespaces.environment" />
	</bean>

    <bean id="interactivespaces.controller.manager.activity.storage"
        class="interactivespaces.controller.client.node.SimpleActivityStorageManager"
        init-method="startup" destroy-method="shutdown">
        <property name="spaceEnvironment" ref="interactivespaces.environment" />
    </bean>
	
	<bean id="interactivespaces.controller.manager.activity.installation"
		class="interactivespaces.controller.client.node.SimpleActivityInstallationManager"
		init-method="startup" destroy-method="shutdown">
		<property name="controllerRepository" ref="interactivespaces.controller.repository.controller" />
        <property name="activityStorageManager" ref="interactivespaces.controller.manager.activity.storage" />
		<property name="spaceEnvironment" ref="interactivespaces.environment" />
	</bean>

	<bean id="interactivespaces.controller.activity.active.factory"
		class="interactivespaces.controller.client.node.internal.osgi.OsgiActiveControllerActivityFactory">
		<property name="scriptService" ref="interactivespaces.service.script" />
		<property name="bundleContext" ref="bundleContext" />
	</bean>

	<bean id="interactivespaces.controller.activity.installer"
		class="interactivespaces.controller.client.node.ros.RosSpaceControllerActivityInstaller"
		init-method="startup" destroy-method="shutdown">
		<property name="activityInstallationManager"
			ref="interactivespaces.controller.manager.activity.installation" />
        <property name="spaceEnvironment" ref="interactivespaces.environment" />
	</bean>

	<bean id="space.activity.native.runner.factory"
		class="interactivespaces.activity.binary.SimpleNativeActivityRunnerFactory">
		<property name="spaceEnvironment" ref="interactivespaces.environment" />
	</bean>

	<bean id="interactivespaces.controller.activity.log.factory" 
	    class="interactivespaces.controller.logging.InteractiveSpacesEnvironmentActivityLogFactory">
		<property name="spaceEnvironment" ref="interactivespaces.environment" />
	</bean>

    <bean id="interactivespaces.controller" class="interactivespaces.controller.client.node.StandardSpaceController"
        init-method="startup" destroy-method="shutdown">
        <property name="spaceEnvironment" ref="interactivespaces.environment" />
        <property name="spaceSystemControl" ref="interactivespaces.systemctl" />
        <property name="activityInstallationManager"
            ref="interactivespaces.controller.manager.activity.installation" />
        <property name="activityStorageManager" ref="interactivespaces.controller.manager.activity.storage" />
        <property name="controllerRepository" ref="interactivespaces.controller.repository.controller" />
        <property name="activeControllerActivityFactory" ref="interactivespaces.controller.activity.active.factory" />
        <property name="configurationManager" ref="interactivespaces.controller.manager.configuration" />
        <property name="nativeActivityRunnerFactory" ref="space.activity.native.runner.factory" />
        <property name="activityLogFactory" ref="interactivespaces.controller.activity.log.factory" />
        <property name="controllerCommunicator" ref="interactivespaces.controller.communicator.ros" />
    </bean>
	
	<bean id="interactivespaces.controller.communicator.ros" class="interactivespaces.controller.client.node.ros.RosSpaceControllerCommunicator">
		<property name="rosEnvironment" ref="ros.environment" />
		<property name="spaceEnvironment" ref="interactivespaces.environment" />
		<property name="spaceControllerActivityInstaller" ref="interactivespaces.controller.activity.installer" />
	</bean>

	<bean id="interactivespaces.controller.shell"
		class="interactivespaces.controller.ui.internal.osgi.OsgiControllerShell"
		init-method="activate" destroy-method="deactivate">
		<property name="controllerRepository" ref="interactivespaces.controller.repository.controller" />
		<property name="spaceController" ref="interactivespaces.controller" />
		<property name="spaceSystemControl" ref="interactivespaces.systemctl" />
		<property name="bundleContext" ref="bundleContext" />
	</bean>

	<context:component-scan base-package="interactivespaces" />

	<osgi:service ref="interactivespaces.controller.activity.active.factory"
		interface="interactivespaces.controller.client.node.ActiveControllerActivityFactory" />

	<osgi:reference id="interactivespaces.service.script"
		interface="interactivespaces.service.script.ScriptService" availability="mandatory" />
	<osgi:reference id="interactivespaces.systemctl" interface="interactivespaces.system.InteractiveSpacesSystemControl"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.environment" interface="interactivespaces.system.InteractiveSpacesEnvironment"
		availability="mandatory" />
	<osgi:reference id="ros.environment" interface="org.ros.osgi.common.RosEnvironment"
		availability="mandatory" />
	<osgi:reference id="interactivespaces.expression.evaluator.factory"
		interface="interactivespaces.evaluation.ExpressionEvaluatorFactory"
		availability="mandatory" />
</beans>
